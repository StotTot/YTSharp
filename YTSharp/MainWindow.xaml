<Window x:Class="YTSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YTSharp"
        mc:Ignorable="d"
        Title="YouTube Downloader" Height="150" Width="450">
    <Grid>
        <TextBox x:Name="UrlBox" HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="302" Height="32"/>
        <Label Content="Url:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="DownloadButton" Content="Download" HorizontalAlignment="Left" Margin="350,47,0,0" VerticalAlignment="Top" Width="67" Click="DownloadButton_Click"/>
        <ProgressBar x:Name="ProgBar" HorizontalAlignment="Left" Height="14" Margin="10,78,0,0" VerticalAlignment="Top" Width="302"/>

    </Grid>
</Window>
